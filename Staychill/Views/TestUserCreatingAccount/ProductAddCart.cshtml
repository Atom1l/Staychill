@model Staychill.ViewModel.TrackingViewModel

<div class="container-fluid border">
    <h1 class="mt-5">ProductAddCart</h1>
    <form asp-action="CreateShipment" asp-controller="Tracking" method="post">
        <table class="table justify-content-center align-items-center align-content-center">
            <thead>
                <tr>
                    <th>
                        <input type="checkbox" id="selectAll" />
                    </th>
                    <th>Cart ID</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total Price</th>
                    <th>Product Name</th>
                    <th>Product Type</th>
                    <th>Color</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cart in Model.CartItemDetails)
                {
                    foreach (var item in cart.CartItems)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="cartIds" value="@item.CartItemId" />
                            </td>
                            <td>
                                @Html.DisplayFor(model => cart.CartId)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.UnitPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.TotalPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Product.ProductName) <!-- Ensure Product is not dynamic -->
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Product.ProductType) <!-- Ensure Product is not dynamic -->
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Product.Color) <!-- Ensure Product is not dynamic -->
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-primary mt-2">Pay for Selected Items</button>
    </form>
</div>

<script>
    // JavaScript to toggle 'select all' functionality
    document.getElementById('selectAll').addEventListener('click', function () {
        var checkboxes = document.getElementsByName('cartIds');
        for (var checkbox of checkboxes) {
            checkbox.checked = this.checked;
        }
    });
</script>
