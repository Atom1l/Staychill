@model IEnumerable<Staychill.Models.ProductModel.Cart>

@{
    ViewData["Title"] = "ProductAddCart";
}



<div class="container-fluid border">
    <h1 class="mt-5">ProductAddCart</h1>
    <table class="table justify-content-center align-items-center align-content-center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CartId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CartId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnitPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalPrice)
                </th>
                <th>Product Name</th>
                <th>Product Type</th>
                <th>Color</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CartId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CartId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.ProductName) <!-- Display Product Name -->
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.ProductType) <!-- Display Product Type -->
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Color) <!-- Display Product Color -->
                    </td>
                    <td>
                        <!-- Add to generate button -->
                        <form asp-action="CreateShipment" asp-controller="Tracking" method="post">
                            <input type="hidden" name="cartId" value="@item.CartId" />
                            <button type="submit" class="btn btn-primary">Pay</button>
                        </form>
                        <!-- Remove button -->
                        <form asp-action="ProductRemoveCart" asp-controller="TestUserCreatingAccount" method="post">
                            <input type="hidden" name="cartId" value="@item.CartId" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
