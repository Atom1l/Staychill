@{
    ViewData["Title"] = "GenerateTracking";
}
@model Staychill.Models.ProductModel.TrackingModel.Tracking

<div class="container-fluid w-100 h-100 d-flex justify-content-center align-items-center align-content-center">
    <div class="w-75 h-50 d-flex flex-column justify-content-center align-content-center align-items-center border border-2 border-warning p-3">
        <div class="row">
            <form asp-action="TrackingGenerateCode" method="post">
                <div>
                    <h2 class="text-center">Code will Generate after clicking Submit</h2>
                </div>
                <div>
                    <label>Choose Status</label>
                    <select asp-for="Status" asp-items="@(new SelectList(Model.Statusoptions))" class="form-control"></select>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Generate ShipmentID</button> |
                    <a asp-action="TrackingIndex">List</a>
                </div>
            </form>
        </div>
    </div>
</div>

