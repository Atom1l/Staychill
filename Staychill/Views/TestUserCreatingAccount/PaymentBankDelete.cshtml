@model Staychill.Models.BankModel.BankAccount

@{
    ViewData["Title"] = "PaymentBankDelete";
}

<h1>PaymentBankDelete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>BankAccount</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BankName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BankName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BankPics)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.BankPicsData != null && Model.BankPicsData.Length > 0) // Check if the image data exists
            {
                var base64String = Convert.ToBase64String(Model.BankPicsData);
                var imgSrc = $"data:image/png;base64,{base64String}"; // Adjust image format if needed
                <img src="@imgSrc" alt="Bank Image" style="width: 200px; height: 100px;" />
            }
            else
            {
                <span>No Image</span>
            }
        </dd>
    </dl>
    
    <form asp-action="PaymentQRDelete" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="PaymentQRIndex">Back to List</a>
    </form>
</div>
