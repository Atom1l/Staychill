@model Staychill.Models.ProductModel.Product

@{
    ViewData["Title"] = "ProductCreate";
}

<h1>ProductCreate</h1>

<h4>ProductModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProductCreate" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductType" class="control-label"></label>
                <select asp-for="ProductType" class="form-control" asp-items="@(new SelectList(Model.Typeoptions))"></select>
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <select asp-for="Color" class="form-control" asp-items="@(new SelectList(Model.Coloroptions))"></select>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instock" class="control-label"></label>
                <input asp-for="Instock" class="form-control" />
                <span asp-validation-for="Instock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Upload Image 1</label>
                <input type="file" name="image1" accept="image/*" class="form-control" />
            </div>

            <div class="form-group">
                <label>Upload Image 2</label>
                <input type="file" name="image2" accept="image/*" class="form-control" />
            </div>

            <div class="form-group">
                <label>Upload Image 3</label>
                <input type="file" name="image3" accept="image/*" class="form-control" />
            </div>

            <div class="form-group">
                <label>Upload Image 4</label>
                <input type="file" name="image4" accept="image/*" class="form-control" />
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ProductIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
