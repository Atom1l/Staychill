@model IEnumerable<Staychill.Models.ProductModel.Product>

@{
    ViewData["Title"] = "ProductIndex";
}

<h1>ProductIndex</h1>

<div>
    <a asp-action="ProductCreate">Create Product</a> |
    <a asp-action="ProductAddCart">See Cart</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instock)
            </th>
            <th>
                Pics
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => product.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.ProductType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Instock)
                </td>
                <td>
                    @if (product.Images != null)
                    {
                        <div>
                            @if (product.Images.Image1 != null)
                            {
                                <img src="@($"data:image/png;base64,{Convert.ToBase64String(product.Images.Image1)}")" alt="Image 1" style="width: 100px; height: 100px;" />
                            }
                            @if (product.Images.Image2 != null)
                            {
                                <img src="@($"data:image/png;base64,{Convert.ToBase64String(product.Images.Image2)}")" alt="Image 2" style="width: 100px; height: 100px;" />
                            }
                            @if (product.Images.Image3 != null)
                            {
                                <img src="@($"data:image/png;base64,{Convert.ToBase64String(product.Images.Image3)}")" alt="Image 3" style="width: 100px; height: 100px;" />
                            }
                            @if (product.Images.Image4 != null)
                            {
                                <img src="@($"data:image/png;base64,{Convert.ToBase64String(product.Images.Image4)}")" alt="Image 4" style="width: 100px; height: 100px;" />
                            }
                        </div>
                    }
                </td>
                <td>
                    <form id="cartForm-@product.Id">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <input type="number" name="quantity" value="1" min="1" />
                        <button type="button" onclick="addToCart(@product.Id)">Add to Cart</button>
                    </form>

                    <a asp-action="ProductDelete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- SCRIPTS FROM GPT TO NOT REDIRECT TO ANOTHER ACTION AFTER ADDING PRODUCT -->
<div id="cartMessage" style="color: green; display:none;">
    Product added to cart!
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function addToCart(productId) {
            var form = $("#cartForm-" + productId);

            $.ajax({
                url: '@Url.Action("ProductAddToCart", "TestUserCreatingAccount")',
                type: 'POST',
                data: form.serialize(),
                success: function () {
                    $("#cartMessage").fadeIn().delay(2000).fadeOut();
                },
                error: function () {
                    alert('Failed to add product to cart. Please try again.');
                }
            });
        }
    </script>
}

