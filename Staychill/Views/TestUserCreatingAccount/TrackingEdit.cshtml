@model Staychill.Models.ProductModel.TrackingModel.Tracking

@{
    ViewData["Title"] = "TrackingEdit";
}

<h1>TrackingEdit</h1>

<h4>Tracking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TrackingEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ShipmentCode" class="control-label"></label>
                <input asp-for="ShipmentCode" class="form-control" />
                <span asp-validation-for="ShipmentCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="control-label" asp-items="@(new SelectList(Model.Statusoptions))"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

