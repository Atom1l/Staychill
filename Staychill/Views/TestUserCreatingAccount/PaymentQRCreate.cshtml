@model Staychill.Models.BankModel.QRData

@{
    ViewData["Title"] = "PaymentQRCreate";
}

<h1>PaymentQRCreate</h1>

<h4>BankAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PaymentQRCreate" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QRPic" class="control-label"></label>
                <input asp-for="QRPic" class="form-control" type="file" accept="image/*" name="Image" />
                <span asp-validation-for="QRPic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="PaymentQRIndex">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
