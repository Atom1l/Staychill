@model Staychill.Models.BankModel.QRData

@{
    ViewData["Title"] = "PaymentQRDelete";
}

<h1>PaymentQRDelete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>QR Data</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QRPic)
        </dt>
        <dd class="col-sm-10">
            @if (Model.QRPicData != null && Model.QRPicData.Length > 0)
            {
                var base64String = Convert.ToBase64String(Model.QRPicData);
                var imgSrc = $"data:image/png;base64,{base64String}";
                <img src="@imgSrc" alt="QR Image" style="width: 200px; height: 200px;" />
            }
            else
            {
                <span>No Image</span>
            }
        </dd>
    </dl>

    <form asp-action="PaymentQRDelete" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="PaymentQRIndex">Back to List</a>
    </form>
</div>
