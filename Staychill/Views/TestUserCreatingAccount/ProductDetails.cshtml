@model Staychill.Models.ProductModel.Product

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<div>
    <h4>Product Information</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Product Name
        </dt>
        <dd class = "col-sm-10">
            @Model.ProductName
        </dd>
        <dt class = "col-sm-2">
            Product Type
        </dt>
        <dd class = "col-sm-10">
            @Model.ProductType
        </dd>
        <dt class = "col-sm-2">
            Color
        </dt>
        <dd class = "col-sm-10">
            @Model.Color
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
            Price
        </dt>
        <dd class = "col-sm-10">
            @Model.Price
        </dd>
        <dt class = "col-sm-2">
            In Stock
        </dt>
        <dd class = "col-sm-10">
            @Model.Instock
        </dd>
    </dl>

    <div>
        <h5>Product Images</h5>
        @if (Model.Images != null)
        {
            <div>
                @if (Model.Images.Image1 != null)
                {
                    <img src="@($"data:image/png;base64,{Convert.ToBase64String(Model.Images.Image1)}")" alt="Image 1" style="width: 100px; height: 100px;"/>
                }
                @if (Model.Images.Image2 != null)
                {
                    <img src="@($"data:image/png;base64,{Convert.ToBase64String(Model.Images.Image2)}")" alt="Image 2" style="width: 100px; height: 100px;"/>
                }
                @if (Model.Images.Image3 != null)
                {
                    <img src="@($"data:image/png;base64,{Convert.ToBase64String(Model.Images.Image3)}")" alt="Image 3" style="width: 100px; height: 100px;"/>
                }
                @if (Model.Images.Image4 != null)
                {
                    <img src="@($"data:image/png;base64,{Convert.ToBase64String(Model.Images.Image4)}")" alt="Image 4" style="width: 100px; height: 100px;"/>
                }
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="ProductIndex">Back to List</a>
</div>
