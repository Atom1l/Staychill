@model Staychill.Models.ProductModel.TrackingModel.Tracking

<h2>Tracking Result for Shipment Code: @Model.ShipmentCode</h2>
<p>Status: @Model.Status</p>

@if (Model.RetainCarts != null && Model.RetainCarts.Count > 0)
{
    foreach (var retainCart in Model.RetainCarts)
    {
        <h3>Products in this Shipment:</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in retainCart.RetainCartItems)
                {
                    <tr>
                        <td>@item.Product.ProductName</td> <!-- Assuming Product has a Name property -->
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice.ToString("C")</td> <!-- Format as currency -->
                        <td>@item.TotalPrice.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
else
{
    <p>No products found for this shipment.</p>
}
