@model Staychill.ViewModel.LoginViewModel

@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/UserCSS/Login.css" asp-append-version="true">

<div class="container">
    <div class="container-fluid d-flex justify-content-center align-items-center" style="min-height:80vh;">
        <div class="w-100 h-auto d-flex justify-content-center align-items-center flex-wrap">
            <!-- Form Column -->
            <div class="right-col col-12 col-md-6 d-flex justify-content-start align-items-center bg-white shadow" style="z-index:99;">
                <div class="containerlogin w-100">
                    <div class="fs-2 mb-4 text-center">Login</div>
                    <form asp-action="Login" method="post" class="d-flex flex-column justify-content-center align-items-center w-100">
                        <div class="form-group w-75 mb-3 fs-4">
                            <input asp-for="Username" class="form-control fs-4" placeholder="Username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group w-75 mb-3 fs-4">
                            <input asp-for="Password" class="form-control fs-4" type="password" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mt-2 w-75">
                            <button type="submit" class="loginbtn btn w-100 fs-4">Login</button>
                        </div>

                        <div class="signcontain text-center mt-3">
                            <div class="fs-5 mb-2">or</div>
                            <a asp-action="SignUp" asp-controller="User" class="Signupbtn btn fs-5 fw-bold text-decoration-none text-black">Create Your Account</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



