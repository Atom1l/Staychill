@model IEnumerable<Staychill.Models.ProductModel.DiscountModel.Discount>

@{
    Layout = "_AdminLayout";
}

<link href="/css/AdminCSS/AdminDiscount.css" rel="stylesheet" asp-append-version="true" />

<div class="container-fluid mt-4" style="overflow-x:hidden;">
    <h1 class="fw-bold text-center">Discount-controller</h1>
    <hr class="mb-4"/>
    <div class="discount-search-container w-100 d-flex justify-content-between align-items-center mt-3">
        <a asp-action="DiscountCreate" class="fs-5 fw-bold">
            <div class="discount-create-new btn-primary p-2 pe-3 ps-3 rounded-3">Create New</div>
        </a>
        <form asp-action="Discount" class="d-flex align-items-center">
            <label for="discountSearchbar" class="discount-search-label fs-5 fw-bold me-2">Search : </label>
            <div class="discount-searchbar-container">
                <input class="discount-searchbar fs-6 rounded-3 p-1 me-2" type="text" name="discountquery" value="" placeholder="" />
                <button type="submit" class="btn-warning p-1 pe-2 ps-2 rounded-3">Search!</button>
            </div>
        </form>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered fs-5 mt-3">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DiscountCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DiscountAmount) (%)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">
                            @Html.DisplayFor(modelItem => item.DiscountCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiscountAmount) %
                        </td>
                        <td>
                            <a asp-action="DiscountEdit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a> |
                            <a asp-action="DiscountDelete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
