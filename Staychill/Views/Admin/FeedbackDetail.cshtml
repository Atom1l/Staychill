@model Staychill.Models.UserModel.Feedback;

@{
    Layout = "_AdminLayout";
}


<div class="container mt-4" style="overflow-x:hidden">

    <h1 class="fw-bold text-center">Feedback-controller</h1>
    <hr class="mb-4" />

    <div class="row d-flex justify-content-center align-items-center align-content-center" >
        <div class="col-8 d-flex flex-column justify-content-center align-items-center align-content-center border p-3 shadow h-auto">
            <div class="d-flex flex-column justify-content-center align-items-center align-content-center mb-2">
                <div class="fs-4 fw-bold">Email</div>
                <div class="fs-5 text-decoration-underline">@Model.Email</div>
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center align-content-center">
                <div class="fs-4 fw-bold">Message</div>
                <div class="fs-5">@Model.Description</div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center align-content-center mt-3">
        <a asp-action="Feedback" class="fs-5 me-2">Back to list</a> |
        <a asp-action="FeedbackDelete" asp-route-id="@Model.Id" class="text-danger fs-5 ms-2" onclick="return confirm('Are you sure you want to delete this?')">Delete</a></a>
    </div>

</div>
