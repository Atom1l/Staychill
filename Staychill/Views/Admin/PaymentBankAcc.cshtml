@model IEnumerable<Staychill.Models.BankModel.BankAccount>

@{
    Layout = "_AdminLayout";
}

<link href="/css/AdminCSS/AdminPaymentforMethod.css" rel="stylesheet" asp-append-version="true" />

<div class="container-fluid mt-4" style="overflow-x:hidden;">
    <h1 class="fw-bold text-center">Payment-controller</h1>
    <hr class="mb-4" />
    <div class="payment-search-container w-100 d-flex justify-content-between align-items-center mt-3">
        <a asp-action="PaymentBankAccCreate" class="fs-5 fw-bold">
            <div class="payment-create-new btn-primary p-2 pe-3 ps-3 rounded-3">Create New</div>
        </a>
        <form asp-action="PaymentBankAcc" class="d-flex align-items-center">
            <label for="cardtypequery" class="payment-search-label fs-5 fw-bold me-2">Search : </label>
            <div class="payment-searchbar-container">
                <input class="payment-searchbar fs-6 rounded-3 p-1 me-2" type="text" name="bankaccquery" value="" placeholder="" />
                <button type="submit" class="btn-warning p-1 pe-2 ps-2 rounded-3">Search!</button>
            </div>
        </form>
    </div>
    <div class="table-responsive text-center">
        <table class="table table-bordered fs-5 mt-3">
            <thead>
                <tr>
                    <th>
                        Bank Accounts
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">
                            @Html.DisplayFor(modelItem => item.BankName)
                        </td>
                        <td>
                            <a asp-action="PaymentBankAccDelete" asp-route-id="@item.Id" class="text-danger" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
