@model Staychill.Models.BankModel.StaychillQR

@{
    Layout = "_AdminLayout";
}

<div class="container-fluid w-100 mt-4" style="overflow-x:hidden; min-height:80vh">
    <h1 class="text-center fw-bold">Payment-controller</h1>
    <hr class="mb-4" />
    <div class="row d-flex justify-content-center align-items-center align-content-center" style="margin-top:100px;">
        <div class="col-md-4 shadow h-auto" style="padding:30px 30px 50px 30px;">
            <div class="fs-2 fw-bold text-center mb-3">Edit QR code</div>
            <form asp-action="PaymentPromptpayEdit" method="post" enctype="multipart/form-data" class="fs-4 text-center">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-3">
                    <input asp-for="StoreQR" type="file" accept="image/jpeg,image/png" class="form-control fs-5 mt-1" name="QR" />
                    <span asp-validation-for="StoreQR" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Edit!" class="btn btn-primary fs-5 p-2 w-100 fw-bold" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}