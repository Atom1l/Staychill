@model IEnumerable<Staychill.Models.BankModel.StaychillQR>

@{
    Layout = "_AdminLayout";
}

<link href="/css/AdminCSS/AdminPaymentforMethod.css" rel="stylesheet" asp-append-version="true" />

<div class="container-fluid mt-4" style="overflow-x:hidden;">
    <h1 class="fw-bold text-center">Payment-controller</h1>
    <hr class="mb-4" />
    <div class="table-responsive text-center mt-2">
        <table class="table table-bordered fs-5 mt-3">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Qr code
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.Id</td>
                        <td class="fw-bold align-middle">
                            @if (item.StoreQRData != null && item.StoreQRData.Length > 0)
                            {
                                <img src="data:image/png;base64,@Convert.ToBase64String(item.StoreQRData)" alt="QR Code" width="100px" height="100px" />
                            }
                            else
                            {
                                <div>No Images availiable</div>
                            }
                        </td>
                        <td class="align-middle">
                            <a asp-action="PaymentPromptpayEdit" asp-route-id="@item.Id" class="text-primary">Edit</a> |
                            <a asp-action="PaymentPromptpayDelete" asp-route-id="@item.Id" class="text-danger" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
