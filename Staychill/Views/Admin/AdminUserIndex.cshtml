@model IEnumerable<Staychill.Models.UserModel.User>

@{
    Layout = "_AdminLayout";
}

<link href="/css/AdminCSS/AdminUser.css" rel="stylesheet" asp-append-version="true" />

<div class="container-fluid mt-4" style="overflow-x:hidden;">
    <h1 class="fw-bold text-center">User-controller</h1>
    <hr class="mb-4" />
    <div class="user-search-container w-100 d-flex justify-content-end align-items-center mt-4">
        <form asp-action="AdminUserIndex" class="d-flex align-items-center">
            <label for="userquery" class="user-search-label fs-5 fw-bold me-2">Search : </label>
            <div class="user-searchbar-container">
                <input class="user-searchbar fs-6 rounded-3 p-1 me-2" type="text" name="userquery" value="" placeholder="" />
                <button type="submit" class="btn-warning p-1 pe-2 ps-2 rounded-3">Search!</button>
            </div>
        </form>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered fs-5 mt-3">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Username)</th>
                    <th>@Html.DisplayNameFor(model => model.Firstname)</th>
                    <th>@Html.DisplayNameFor(model => model.Lastname)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Password)</th>
                    <th>@Html.DisplayNameFor(model => model.Phonenumber)</th>
                    <th>@Html.DisplayNameFor(model => model.Address.Housenumber)</th>
                    <th>@Html.DisplayNameFor(model => model.Address.Alley)</th>
                    <th>@Html.DisplayNameFor(model => model.Address.Road)</th>
                    <th>@Html.DisplayNameFor(model => model.Address.Subdistrict)</th>
                    <th>@Html.DisplayNameFor(model => model.Address.District)</th>
                    <th>@Html.DisplayNameFor(model => model.Address.Province)</th>
                    <th>@Html.DisplayNameFor(model => model.Address.Country)</th>
                    <th>@Html.DisplayNameFor(model => model.Address.Zipcode)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold truncate-text">@Html.DisplayFor(modelItem => item.Id)</td>
                        <td class="fw-bold truncate-text">@Html.DisplayFor(modelItem => item.Username)</td>
                        <td class="fw-bold truncate-text">@Html.DisplayFor(modelItem => item.Firstname)</td>
                        <td class="fw-bold truncate-text">@Html.DisplayFor(modelItem => item.Lastname)</td>
                        <td class="fw-bold truncate-text">@Html.DisplayFor(modelItem => item.Email)</td>
                        <td class="fw-bold truncate-text">@Html.DisplayFor(modelItem => item.Password)</td>
                        <td class="fw-bold truncate-text">@Html.DisplayFor(modelItem => item.Phonenumber)</td>
                        <td class="fw-bold truncate-text">@Html.DisplayFor(modelItem => item.Address.Housenumber)</td>
                        <td class="fw-bold truncate-text">@Html.DisplayFor(modelItem => item.Address.Alley)</td>
                        <td class="fw-bold truncate-text">@Html.DisplayFor(modelItem => item.Address.Road)</td>
                        <td class="fw-bold truncate-text">@Html.DisplayFor(modelItem => item.Address.Subdistrict)</td>
                        <td class="fw-bold truncate-text">@Html.DisplayFor(modelItem => item.Address.District)</td>
                        <td class="fw-bold truncate-text">@Html.DisplayFor(modelItem => item.Address.Province)</td>
                        <td class="fw-bold truncate-text">@Html.DisplayFor(modelItem => item.Address.Country)</td>
                        <td class="fw-bold truncate-text">@Html.DisplayFor(modelItem => item.Address.Zipcode)</td>
                        <td class="d-flex justify-content-center align-items-center">
                            <a asp-action="EditProfile" asp-controller="User" asp-route-username="@item.Username" class="tracking-edit-btn me-2">Edit</a> |
                            <a asp-action="AdminDetails" asp-route-id="@item.Id" class="tracking-edit-btn text-info ms-2 me-2">Detail</a> |
                            <a asp-action="AdminDelete" asp-route-id="@item.Id" class="text-danger" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

