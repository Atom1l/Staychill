<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]  Staychill</title>
    <link rel="icon" href="~/pic/StayChill logo.png" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Staychill.styles.css" asp-append-version="true" />

    <!-- Icons Library CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<body>
    <!-- === Header === -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white">
            <!-- Container of elements -->
            <div class="container-fluid ps-2 ps-sm-0">
                <!-- Collapse button -->
                <button class="collapse-1 navbar-toggler" id="navbarToggleButton" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa-solid fa-bars"></i>
                </button>
                <!-- Navbar content -->
                <div class="navbar-collapse collapse d-sm-flex flex-sm-row justify-content-center ps-3">
                    <!-- Unorder List of navigation links -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item d-flex flex-column flex-sm-row fs-5">
                            <!-- Another Collapse button -->
                            <button class="collapse-2 navbar-toggler" id="navbarToggleButton" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <i class="fa-solid fa-xmark"></i>
                            </button>
                            <!-- Home -->
                            <a class="nav-link text-dark fw-normal ms-3 ms-sm-2" asp-area="" asp-controller="User" asp-action="Index">Home</a>
                            <!-- Products -->
                            <a class="nav-link text-dark fw-normal ms-3 ms-sm-2" asp-controller="Admin" asp-action="Discount">Product</a>
                            <!-- Discount -->
                            <a class="nav-link text-dark fw-normal ms-3 ms-sm-2" asp-controller="Admin" asp-action="Discount">Discount</a>
                            <!-- Payment -->
                            <a class="nav-link text-dark fw-normal ms-3 ms-sm-2" asp-controller="Admin" asp-action="Payment">Payment</a>
                            <!-- Tracking -->
                            <a class="nav-link text-dark fw-normal ms-3 ms-sm-2" asp-area="" asp-controller="Admin" asp-action="Tracking">Tracking</a>
                        </li>
                    </ul>
                    <!-- Unorder List of navigation links -->
                </div>
                <!-- Cart & User -->
                <div class="d-flex ms-auto align-items-center align-content-start align-content-sm-center me-3">
                    <a class="searchnav text-decoration-none" href="#"><i class="bi bi-search"></i></a>
                    <a class="cartnav" asp-controller="TestUserCreatingAccount" asp-action="ProductIndex"><i class="bi bi-cart2"></i></a>
                    <!-- User dropdown -->
                    <div class="nav-item dropdown">
                        <div class="nav-link text-dark fw-normal  usernav" id="userDropdown" role="button">
                            <i class="bi bi-person"></i>
                        </div>
                        <ul class="dropdown-user" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item dropline text-decoration-none text-black" asp-action="">Edit Profile</a></li>
                            <li><a class="dropdown-item dropline text-decoration-none text-black" asp-action="">Log Out</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- Container of elements -->
        </nav>
    </header>
    <!-- === Header === -->
    <!-- === Body === -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- === Body === -->
    <!-- === Footer === -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Staychill
        </div>
    </footer>
    <!-- === Footer === -->

    <script src="~/js/navbar.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
